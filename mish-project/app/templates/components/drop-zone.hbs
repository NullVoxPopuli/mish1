{{! template-lint-disable }}
<div class="" style="display:inline-block;background:white;position:relative;z-index:26">

  <div style="margin: 0 0 0.2em 0"><p id="uploadWarning"></p></div>

<form method="post" enctype="multipart/form-data" action="." class="">
  <input type="hidden" name="dzpar" value="{{userDir}}@{{imdbPath}}@{{imdbDir}}@{{picFound}}" />
  <input type="hidden" name="dzparam" value="{{picFound}}" />

  <button id="uploadPics" style="cursor:pointer;background:#ddd;display:none"
  type="submit" class="btn-std" {{action 'processQueue'}}>&nbsp;Ladda upp&nbsp;</button>

  <button id="removeAll" style="cursor:pointer;background:#ddd;display:none"
  type="submit" class="btn-std" {{action 'removeAllFiles'}} title="...från den här panelen">&nbsp;Ta bort alla&nbsp;</button>

  <button id="removeDup" style="cursor:pointer;background:#ddd;display:none"
  type="submit" class="btn-std" {{action 'removeDupFiles'}} title="...från den här panelen">&nbsp;Ta bort med VARNING&nbsp;</button>
</form>

</div>

<p id="dzinfo">upload textinfo</p><button id="helpUpload" style="cursor:pointer;color:blue;background:#ddd"
type="submit" class="btn-std" {{action ''}} title="Hur ladda upp bilder?
Planerad hur-gör-man-beskrivning">&nbsp;HJÄLP&nbsp;</button>
<p id="uploadFinished"></p>
<p class="dzclose" {{action 'closeThis'}}> &times; </p>

<!-- an empty <div> breaks the inline block sequence -->
<div></div>

{{yield}}
